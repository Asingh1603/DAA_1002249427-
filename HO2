def main():
    # Get user input
    while True:
        try:
            user_input = input("Enter numbers separated by spaces: ")
            array = list(map(int, user_input.split()))
            if not array:
                print("The array cannot be empty. Please enter at least one number.")
            else:
                break
        except ValueError:
            print("Invalid input. Please enter only numbers separated by spaces.")

    print("Original array:", array)

    # Insertion Sort
    insertion_array = array.copy()
    for i in range(1, len(insertion_array)):
        key = insertion_array[i]
        j = i - 1
        while j >= 0 and insertion_array[j] > key:
            insertion_array[j + 1] = insertion_array[j]
            j -= 1
        insertion_array[j + 1] = key

    # Selection Sort
    selection_array = array.copy()
    for i in range(len(selection_array)):
        min_index = i
        for j in range(i + 1, len(selection_array)):
            if selection_array[j] < selection_array[min_index]:
                min_index = j
        selection_array[i], selection_array[min_index] = selection_array[min_index], selection_array[i]

    # Bubble Sort
    bubble_array = array.copy()
    n = len(bubble_array)
    for i in range(n):
        swapped = False
        for j in range(0, n - i - 1):
            if bubble_array[j] > bubble_array[j + 1]:
                bubble_array[j], bubble_array[j + 1] = bubble_array[j + 1], bubble_array[j]
                swapped = True
        if not swapped:
            break

    # Print results
    print("Insertion Sort:", insertion_array)
    print("Selection Sort:", selection_array)
    print("Bubble Sort:", bubble_array)

if __name__ == "__main__":
    main()
